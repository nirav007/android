<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    android:background="@android:color/white"
    >

   <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/head_click"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txtTicketNo"
                android:text="Ticket # T00025"
                android:textColor="@color/view"
                android:textSize="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Alert"
                android:textColor="@color/defaulttextcolor"
                android:id="@+id/txtAlert1"
                
                 android:textSize="10dip"
                android:layout_marginTop="3dip"
                android:textStyle="italic" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallmart Store # 1234"
            android:id="@+id/txtStore"
            android:textColor="@color/view" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress"
            android:text="P.O. Box 373, 128 Magna. Road 7272 Nunc Road"
            android:textColor="#696969" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need to clean this property urgently"
            android:textColor="#696969"
            android:id="@+id/txtTask"
            android:textSize="20dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dip" />
        
        <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                 >
        
         <TextView
                android:id="@+id/btnCheckin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:layout_margin="5dip"
                android:background="@drawable/btn_style"
                android:gravity="right"
                android:padding="10dip"
                android:text=" Check In "
                android:textColor="#ffffff" />
         
         <TextView
             
             android:layout_margin="5dip"
                android:id="@+id/btnCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                
                android:background="@drawable/btn_style"
                android:gravity="right"
                android:padding="10dip"
                android:text=" Check Out"
                android:textColor="#ffffff" />
         
         </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@color/view" />
    
    
    
   

   

</LinearLayout>