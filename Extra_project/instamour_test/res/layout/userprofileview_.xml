<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/topaction"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip" >

        <Button
            android:id="@+id/sample_button"
            style="@android:style/Widget.Button.Small"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/edit_leftnavmenuicon" />

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Your Amours"
            android:textColor="#000000"
            android:textSize="25dip"
            android:textStyle="bold" />
    </RelativeLayout>
 
 <ScrollView  
     android:layout_below="@+id/topaction"
     android:layout_width="match_parent"
            android:layout_height="match_parent" >
        
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
              >
    

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:background="#F0E0D1" >

        <VideoView
            android:id="@+id/uservideoview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/edit_uservideopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/useruser" />

        <ImageView
            android:id="@+id/videoplaybtn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="top|left"
            android:src="@drawable/videoplaybutton" />
    </FrameLayout>
    
      <LinearLayout
        android:id="@+id/img_userback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/female_redbox"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:id="@+id/img_editphoto"
                android:src="@drawable/female_redcamera" />

            <TextView
                android:id="@+id/txteditphoto"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1.5"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dip"
                android:text="Edit photo"
                android:textColor="#740404"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="2dip"
            android:weightSum="2" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:id="@+id/img_editaboutme"
                android:src="@drawable/female_rededitaboutme" />

            <TextView
                android:id="@+id/txteditaboutme"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1.5"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dip"
                android:text="Edit about me"
                android:textColor="#740404"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:text="5.6/All Business"
        android:textColor="#919191" />

    <TextView
        android:id="@+id/txtaboutme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:text="About me:"
        android:textColor="#740404"
        android:textSize="20dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtaboutme"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="I am fun girl who likes to laugh. I love man who can cook"
        android:textColor="#919191" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dip" >
    </View>
    
    </LinearLayout>
    
        
    </ScrollView>
    
</RelativeLayout>