<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_fill" >
    
    

    <RelativeLayout
        android:id="@+id/topaction"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/topnavbar"
        android:paddingLeft="2dip"
        android:paddingRight="2dip" >

        <Button
            android:id="@+id/sample_button"
            style="@android:style/Widget.Button.Small"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/leftnavmenuicon_" />

        <TextView
            android:id="@+id/txtheadtext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Search"
            android:textColor="#000000"
            android:textSize="25dip"
            android:textStyle="bold" />
        
          <Button
            android:id="@+id/btnSearch"
           android:layout_margin="5dip"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/user_search" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/topaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/roundcorner"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtGender"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Gender"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtGender"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Female"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Age range"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAge"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="25-32"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtRelation"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Looking for ?"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRelation"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Relationship"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtVideo"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Video"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtVideo"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="At least 2"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Location"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Philadelphia"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtOnline"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Last online"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtOnline"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Today"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtEthnicity"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Ethnicity"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEthnicity"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="White"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:weightSum="1" >

            <TextView
                android:id="@+id/txtSmoker"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Smoker"
                android:textColor="@color/menutextcolor"
                android:textSize="20dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSmoker"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="No"
                android:textColor="#201F1F"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

     <Spinner
        android:id="@+id/spinner"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</RelativeLayout>