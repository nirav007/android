<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff" />
                <size android:width="20dip"/>
            <stroke
                android:width="2dp"
                android:color="#006399" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
               android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="360" />
            <stroke
                android:width="0dp"
                android:color="#006399" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item  >
        <shape >
            <gradient
                 android:startColor="#006399"
                android:endColor="#ffffff"
                android:angle="360" />
            <stroke
                android:width="0dp"
                android:color="#006399" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>