<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/bgcolor" />
                <size android:width="20dip"/>
            <stroke
                android:width="1dp"
                android:color="#BBffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
               android:startColor="#ffffff"
               android:endColor="#ffffff"
                android:angle="360" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item  >
        <shape >
            
            <corners
                android:radius="4dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>