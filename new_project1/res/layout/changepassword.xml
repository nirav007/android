<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"  
  android:layout_width="fill_parent" android:layout_height="fill_parent" >
<RelativeLayout
  
  android:orientation="vertical"
  android:layout_width="fill_parent" 
android:layout_gravity="center_vertical|center_horizontal"
  android:layout_height="fill_parent" android:background="@color/bgcolor">
  

<TextView android:id="@+id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    
    android:gravity="center" android:padding="15dip"
        
        android:text="   Change Password" style="@style/header" 
        android:background="@drawable/bgeffect" />
    
    <TextView android:autoLink="all"  android:layout_marginTop="7dip"
        android:text="Settings" 
        android:id="@+id/btnback" android:background="@drawable/blue_button"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        style="@style/savestyle" android:gravity="center_vertical"
       android:layout_marginLeft="5dip"
        android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true">
         ></TextView>
   <TextView android:autoLink="all"  android:layout_marginTop="7dip"
        android:text=" Save " 
        android:id="@+id/btnchangepass" android:background="@drawable/blue_button"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        style="@style/savestyle" android:gravity="center_vertical"
	 android:layout_marginRight="5dip"
        android:layout_alignParentTop="true"
         android:layout_alignParentRight="true">
         ></TextView>
    
   <ScrollView android:id="@+id/test"
   android:layout_below="@id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="5dp" android:layout_marginLeft="15dip"
    android:layout_marginTop="10dip"
    android:layout_marginRight="5dp" 
    
     >
     
       
        <LinearLayout 

android:layout_marginLeft="10dip"

  android:paddingLeft="10dip"
  android:paddingRight="10dip"
        android:background="@drawable/roundrect_pass" 
        android:orientation="vertical"  
        
        android:layout_height="fill_parent" android:layout_width="fill_parent">
         
        
        <TextView style="@style/style_pass" 
        android:layout_marginTop="15dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
         android:layout_height="wrap_content"  android:layout_width="fill_parent" 
        	android:text=" 1. Enter your old password" android:id="@+id/txtuser"
        
         />
        <EditText android:layout_height="40dip" 
        android:layout_marginTop="5dip"      
    android:layout_marginLeft="5dip"
    
        android:layout_marginRight="5dip"  
        android:layout_marginBottom="5dip"
        style="@style/backdesignpass"
        
        android:hint=" Old password " android:id="@+id/oldpass"
         android:layout_width="fill_parent"
         android:password="true"/>
        
         <TextView  style="@style/style_pass" android:paddingTop="5dip"
         android:paddingLeft="2dip"
        android:paddingRight="2dip"
         android:text=" 2. Enter your new password" android:id="@+id/txtlocation" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
         ></TextView>
        
        <EditText  android:hint=" New password " android:id="@+id/newpass" 
         android:layout_marginTop="5dip"      
    android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"  
        android:layout_marginBottom="5dip"
        android:layout_height="40dip" android:layout_width="fill_parent" 
        android:password="true"
        style="@style/backdesignpass"
         >
            
        </EditText>
        
           <TextView  style="@style/style_pass" android:paddingTop="5dip"
           android:paddingLeft="2dip"
        android:paddingRight="2dip"
         android:text=" 3. Re-enter your new password" android:id="@+id/txtlocation" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
         ></TextView>
        
        <EditText  android:hint=" Re-enter New password " android:id="@+id/confirmpass" 
         android:layout_marginTop="5dip"      
    android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"  
        style="@style/backdesignpass"
        android:layout_height="40dip" android:layout_width="fill_parent" 
        android:password="true"
        android:layout_marginBottom="20dip"
         >
         </EditText>
         
        
        
        
         </LinearLayout>
       
       </ScrollView>
       
       </RelativeLayout>
       
       </LinearLayout> 


