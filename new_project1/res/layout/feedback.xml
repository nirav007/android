<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"  
  
  android:layout_width="fill_parent" android:layout_height="fill_parent" >
<RelativeLayout
  
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@color/bgcolor">
  

<TextView android:id="@+id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    
    android:gravity="center" android:padding="15dip"
        
        android:text="FeedBack" style="@style/header" android:background="@drawable/bgeffect" />



   <ImageView android:gravity="center"  
   android:layout_width="wrap_content" android:id="@+id/idback" 
    android:layout_height="wrap_content" 
     />
  

    
    
   
   
  <ScrollView android:id="@+id/test" android:layout_below="@id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="5dp" android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp">
     
  <LinearLayout
  android:layout_marginRight="5dip"
  android:layout_marginLeft="10dip"
  android:layout_margin="5dip"
  android:orientation="vertical"
   android:paddingTop="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="1">
       
       <RelativeLayout android:id="@+id/above"
       android:layout_gravity="center_horizontal"
        
        android:padding="5dip" android:orientation="horizontal" 
        android:layout_width="fill_parent" android:layout_height="110dip">
       
       <ImageView android:src="@drawable/profilepic_empty" 
        android:layout_height="100dip" android:layout_width="100dip" 
        android:id="@+id/feedback_upload_img" android:padding="5dip"  />
        
       <TextView android:layout_width="fill_parent" style="@style/style" 
       android:layout_height="wrap_content" 
       android:id="@+id/feedback_username" 
       android:gravity="center_horizontal|left" 
        android:text="asd"
       android:layout_centerVertical="true" 
       android:layout_alignParentRight="true" 
       android:layout_toRightOf="@+id/feedback_upload_img"></TextView>
     
       </RelativeLayout>
       
       
      <TextView android:layout_width="fill_parent" 
      android:gravity="left" 
       android:text=" What's on Your Mind ? " 
       style="@style/style" android:padding="10dip"
       android:layout_gravity="left"
       android:layout_height="wrap_content"></TextView>
    
     
  <EditText 
   android:layout_height="135dip" 
   android:layout_width="fill_parent" 
   android:id="@+id/editfeedback" 
   android:gravity="left" 
   android:inputType="text"
   android:layout_below="@+id/test" 
   android:layout_alignParentLeft="true" >
      
  </EditText>
  
  <TextView android:layout_height="wrap_content"  
  
  android:id="@+id/txtsave"
     android:text="  SEND  " 
     android:autoLink="all" 
     style="@style/savestyle" 
     android:layout_gravity="right"
     android:textColor="@color/logincolor"
     android:gravity="center_vertical|center_horizontal"
     android:layout_width="wrap_content"  android:background="@drawable/signinbutton" 
     android:layout_centerHorizontal="true"></TextView>
</LinearLayout>
 </ScrollView>
  
       </RelativeLayout>
       </LinearLayout> 