<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"  
  android:layout_width="fill_parent" android:layout_height="fill_parent" >
<RelativeLayout
  
  android:orientation="vertical"
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent" android:background="@color/bgcolor">
  

<TextView android:id="@+id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    
    android:gravity="center" android:padding="15dip"
        
        android:text="  Interest Settings" style="@style/header" 
        android:background="@drawable/bgeffect" />
    
    <TextView android:autoLink="all"  android:layout_marginTop="7dip"
        android:text="Settings" 
        android:id="@+id/btnback" android:background="@drawable/blue_button"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        style="@style/savestyle" android:gravity="center_vertical"
        
          android:layout_marginLeft="5dip"
        android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true">
         ></TextView>
   <TextView android:autoLink="all"  android:layout_marginTop="7dip"
        android:text=" Save " 
        android:id="@+id/saveinterest" android:background="@drawable/blue_button"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        style="@style/savestyle" android:gravity="center_vertical"
         android:padding="10dip" android:layout_marginRight="5dip"
        android:layout_alignParentTop="true"
         android:layout_alignParentRight="true">
         ></TextView>
    
   <ScrollView android:id="@+id/test"
   android:layout_below="@id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="5dp" android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
    android:layout_marginRight="5dp" 
     >
     
       
        <LinearLayout 
        android:background="@color/bgcolor" 
        android:orientation="vertical"  
        android:layout_height="fill_parent" android:layout_width="fill_parent">
         
         
         <LinearLayout 
         android:paddingBottom="10dip"
         android:layout_marginTop="10dip"
         android:layout_marginBottom="5dip"
         android:layout_marginLeft="5dip"
         android:layout_marginRight="5dip"
        android:background="@drawable/roundrect" 
        android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_width="fill_parent">
        
        <LinearLayout 
        android:background="@drawable/blue_button"
        android:orientation="horizontal"  android:layout_weight="2"
        android:layout_height="45dip" android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
         
        
        
        
        <TextView style="@style/savestyle_interest"  
        android:gravity="left" android:layout_weight="0"
        	android:layout_gravity="left|center_vertical"
        
         android:layout_height="wrap_content"  android:layout_width="wrap_content" 
        	android:text=" Distance from me " android:id="@+id/txtuser"
        
         />
           <TextView style="@style/savestyle" android:paddingRight="10dip"       
         android:layout_height="wrap_content" 
          android:layout_width="fill_parent" 
          
        	android:text=" 0 miles" android:id="@+id/txt_distance"
        	android:gravity="right|center_vertical" android:layout_weight="0"
        	android:layout_gravity="right|center_vertical"
        
         />
         </LinearLayout>
          
         <SeekBar  android:layout_height="24dip" 
         android:progressDrawable="@drawable/progress"
         android:layout_marginTop="10dip"
         android:layout_margin="5dip"
         android:paddingLeft="10dip" 
          android:id="@+id/seekbar_distance"
          android:max="10"
         android:thumb="@drawable/slider"
         android:paddingRight="10dip" android:layout_width="fill_parent"/>
         
     
        
        
         </LinearLayout>
         
         
         
       <LinearLayout android:layout_marginTop="5dip"
       android:paddingBottom="10dip"
       android:layout_marginBottom="5dip"
        android:background="@drawable/roundrect" 
        android:orientation="vertical"  
        android:layout_height="wrap_content" android:layout_width="fill_parent"
          android:layout_marginLeft="5dip"
         android:layout_marginRight="5dip"
        >
         
        
        <TextView style="@style/savestyle_interest"
        android:background="@drawable/blue_button"
         android:padding="5dip" android:paddingTop="5dip"
         android:layout_height="45dip"  android:layout_width="fill_parent" 
        	android:text=" Budget " android:id="@+id/txtuser"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
         />
      
     
          <SeekBar  android:layout_height="24dip" 
          android:progressDrawable="@drawable/progress"
      
          android:id="@+id/seekbar_social"
         android:layout_margin="5dip"
         android:max="2"
         android:paddingLeft="10dip" android:thumb="@drawable/slider"
         android:paddingRight="10dip" android:layout_width="fill_parent"/>
        
        	<LinearLayout
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="3">
			      <TextView
			          android:text="Student"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|left"
			          android:paddingLeft="10dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="Moderate"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|center"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="Best"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|right"
			          android:paddingRight="10dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			     
			        
			         </LinearLayout>
         </LinearLayout>
         
         <LinearLayout android:layout_marginTop="5dip"
         
         android:layout_marginBottom="5dip"
        android:background="@drawable/roundrect" 
        android:orientation="vertical"  
        android:layout_height="wrap_content" android:layout_width="fill_parent"
          android:layout_marginLeft="5dip"
         android:layout_marginRight="5dip"
        >
         
        
        <TextView style="@style/savestyle_interest" android:padding="5dip" 
        android:background="@drawable/blue_button"
        android:paddingTop="5dip"
         android:layout_height="45dip"  android:layout_width="fill_parent" 
        	android:text=" My Interests Now " android:id="@+id/txtuser"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
         />
      
		         	<LinearLayout 
		         	
		        android:orientation="horizontal"  android:paddingTop="5dip"
		       android:layout_weight="2"
		        android:layout_height="wrap_content" android:layout_width="fill_parent">
		         
		         <EditText android:layout_height="30dip" 
		         
		        android:hint="  Enter Interest" 
		        android:id="@+id/edit_interest"
		         android:layout_width="wrap_content"
		         android:layout_marginLeft="10dip"
		         style="@style/setting_edittext"
		         android:layout_weight="1"
		        android:gravity="left|center_vertical"
		        android:layout_gravity="left"
		        />
		        <TextView 
		        android:text="    Add   " android:layout_marginLeft="5dip"
		        android:id="@+id/save_interest" 
		        android:background="@drawable/interest_button"
		        android:layout_height="30dip" 
		        
		        android:layout_width="wrap_content"
		        style="@style/setting_savestyle" 
		         
		         android:layout_weight="0"
		         android:layout_marginRight="10dip"
		         android:layout_marginBottom="5dip"
		       android:gravity="center_vertical|center_horizontal"
		       android:layout_gravity="right"
		        >
		         </TextView>
        
        </LinearLayout>
        <LinearLayout
        android:background="@drawable/blue_button"
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
			      
			      android:layout_weight="3"
			      
			      >
			      <TextView
			          android:text="Concerts"
			          android:layout_width="175dip"
			          style="@style/stylesetting_1"
			          android:background="@drawable/tagtemplate"
			          android:gravity="center_horizontal|left|center_vertical"
			         android:layout_marginLeft="2dip"
			          android:layout_marginRight="2dip"
			       android:paddingLeft="12dip"
			          android:layout_height="40dip"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="   Skiing"
			          style="@style/stylesetting_1"
			          android:background="@drawable/tagtemplate"
			          android:gravity="center_vertical|left|center_horizontal"
			          android:layout_width="170dip"
			          android:layout_height="40dip"
			           android:paddingLeft="10dip"
			         
			          android:layout_marginRight="2dip"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="   Clubs"
			          style="@style/stylesetting_1"
			          android:background="@drawable/tagtemplate"
			          android:gravity="center_horizontal|left|center_vertical"
			           android:paddingLeft="10dip"
			          android:layout_marginRight="2dip"
			          android:layout_width="170dip"
			          android:layout_height="40dip"
			          android:layout_weight="1"/>
			     
			        
			         </LinearLayout>
         </LinearLayout>
       
       
         <LinearLayout android:layout_marginTop="5dip"
         android:paddingBottom="10dip"
         android:layout_marginBottom="5dip"
        android:background="@drawable/roundrect" 
        android:orientation="vertical"  
        android:layout_height="wrap_content" android:layout_width="fill_parent"
          android:layout_marginLeft="5dip"
         android:layout_marginRight="5dip"
        >
         
        
          <LinearLayout 
        android:background="@drawable/blue_button"
        android:orientation="horizontal"  android:layout_weight="2"
        android:layout_height="45dip" android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
         
        
        
        
          <TextView style="@style/savestyle_interest"
           android:gravity="left" android:layout_weight="0"
        	android:layout_gravity="left|center_vertical"
         android:layout_height="wrap_content"  android:layout_width="wrap_content"
        	android:text=" Reminder Alerts" android:id="@+id/txtuser"
        
         />
         
         
        
          <TextView style="@style/savestyle" 
          android:gravity="right|center_vertical" android:layout_weight="0"
        	android:layout_gravity="right|center_vertical"
         android:layout_height="wrap_content"  android:layout_width="fill_parent" 
        	android:text="0 Days " android:id="@+id/txtreminder"
       
         />
         </LinearLayout>
        
       
      
          <SeekBar android:id="@+id/seekbar_reminder" 
          android:progressDrawable="@drawable/progress" 
          android:max="7"
          android:layout_height="24dip" 
         android:layout_margin="5dip"
         android:thumb="@drawable/slider"
          android:layout_width="fill_parent"
          android:paddingLeft="10dip"
          android:paddingRight="10dip"
          
          />
         
         <LinearLayout
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="3">
			      <TextView
			          android:text="Every Day"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|left"
			          android:paddingLeft="10dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="Every 3 Days"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|center"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			      <TextView
			          android:text="Every 7 Days"
			          style="@style/stylesetting_1"
			          android:gravity="center_horizontal|right"
			          android:paddingRight="10dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"/>
			     
			        
			         </LinearLayout>
       
         </LinearLayout>
        
         </LinearLayout>
       
       </ScrollView>
       
       </RelativeLayout>
       
       </LinearLayout> 


 