<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
 
  >
    
    <LinearLayout  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/list_item"
   android:layout_weight="2" >
    
    <RelativeLayout 
  android:layout_width="wrap_content"
  android:layout_height="90dip"
  android:layout_gravity="left" 
  android:layout_weight="1">
  
    	<ImageView 
    	android:id="@+id/img_item"
    	 android:src="@drawable/aaa"
    	 android:layout_width="70dip"
    	 android:layout_marginTop="5dip"
    	 android:layout_marginLeft="5dip"
  android:layout_height="90dip"
    	 />
    	 <ImageView  android:src="@drawable/removebutton"
    	 android:layout_width="25dip"
  android:layout_height="25dip"
    	 />
    </RelativeLayout>
    
    <LinearLayout
    android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="vertical"

	 android:layout_weight="1"
	android:layout_gravity="center"
     >
     
     	<TextView
     	 xmlns:android="http://schemas.android.com/apk/res/android"
     	android:id="@+id/txt_itemname"
     	 android:text="Item seven"
    android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:textColor="@color/settingtxt"
    android:textSize="20dip"
    android:textStyle="bold"
     	 />
     	
     
     </LinearLayout>
     
     <LinearLayout android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:orientation="vertical"
	android:gravity="right"
	android:layout_gravity="right"
	 android:layout_weight="1"
	 >
	
	 <TextView android:text="More"
    android:layout_height="wrap_content"
	android:layout_width="wrap_content"
    android:textColor="@color/settingtxt"
    android:textSize="15dip"
     	 />
	</LinearLayout>

	</LinearLayout>
	
	
	 <LinearLayout  android:orientation="horizontal"
  android:layout_height="wrap_content"
  android:background="@color/tabcolor" android:layout_width="match_parent">
 	
 	<TextView android:text="Item Seven"
    android:layout_height="wrap_content"
	android:layout_width="wrap_content"
    android:textColor="@color/settingtxt"
    android:textSize="25dip"
    android:layout_weight="1"
    android:layout_gravity="left"
    android:gravity="left"
    android:layout_marginLeft="10dip"
    
     	 />
     	 
     	 	<TextView android:text="Less"
    android:layout_height="wrap_content"
	android:layout_width="wrap_content"
    android:textColor="@color/settingtxt"
    android:textSize="15dip"
    android:layout_weight="1"
    android:layout_gravity="right"
    android:gravity="right"
     	 />
 	
	
</LinearLayout>


<FrameLayout android:background="@color/tabcolor"   android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	
	>

	<ImageView  android:src="@drawable/aaa"
    	 android:layout_width="fill_parent"
    	 android:layout_marginTop="5dip"
    	 android:layout_marginLeft="5dip"
  android:layout_height="300dip"
  
    	 />

 <ImageView  android:src="@drawable/removebutton"
    	 android:layout_width="25dip"
  android:layout_height="25dip"
  android:layout_gravity="left"
  android:layout_margin="10dip"
    	 />
    	 
    	  <ImageView  android:src="@drawable/reminderbutton"
    	 android:layout_width="25dip"
  android:layout_height="25dip"
  android:layout_gravity="right"
  
    	 />
</FrameLayout>

<LinearLayout  android:layout_height="wrap_content" android:background="@color/tabcolor"
	android:layout_width="fill_parent" android:gravity="right" >
	
	<ImageView  android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:src="@drawable/lovebutton"
	  />
	<ImageView  android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:src="@drawable/likebutton"
	  />
	  <ImageView  android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:src="@drawable/votedownbutton"
	  />
	</LinearLayout>
	
	<LinearLayout android:layout_height="wrap_content" android:background="@color/tabcolor"
	android:layout_width="fill_parent" >
	
	<TextView android:text="Item Text Here \n Item Text Here"
    android:layout_height="wrap_content"
	android:layout_width="wrap_content"
    android:textColor="@color/settingtxt"
    android:textSize="15dip"
   
     	 />
	
	</LinearLayout>
	
	 
</LinearLayout>