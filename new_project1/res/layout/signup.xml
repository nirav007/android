<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"  android:background="@color/bgcolor"
  android:layout_width="fill_parent" android:layout_height="fill_parent" >
  
<RelativeLayout
  
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:layout_gravity="center_vertical|center_horizontal"
  >
  

<TextView android:id="@+id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    
    android:gravity="center" android:padding="15dip"
        
        android:text="Profile" style="@style/header" 
        
        android:background="@drawable/bgeffect" />

   <ImageView android:gravity="center" android:padding="10dip"
     android:layout_width="wrap_content" android:id="@+id/idback" 
      android:layout_height="wrap_content" android:layout_marginTop="7dip"
        />
     <ImageView android:padding="10dip" android:gravity="center" android:id="@+id/idfrd" android:layout_marginTop="5dip"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"></ImageView>
  

 <TextView android:autoLink="all"  android:layout_marginTop="5dip"
        
        android:id="@+id/btnsignin" android:background="@drawable/profile"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
         android:gravity="center_vertical"
         android:padding="10dip" android:layout_marginLeft="10dip"
        android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true">
         ></TextView>
   
   
  <ScrollView android:id="@+id/test" android:layout_below="@id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dip" 
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
     
  
       
        <LinearLayout   android:background="@color/bgcolor"
        android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_marginTop="10dip" 
        android:layout_height="400dp">
  
  
         
        
        <RelativeLayout android:id="@+id/above"
       android:layout_gravity="center_horizontal"
        
        android:padding="5dip" android:orientation="horizontal" 
        android:layout_width="fill_parent" android:layout_height="140dip">
       
       <ImageView android:src="@drawable/profilepic_empty" 
        android:layout_height="130dip" android:layout_width="150dip" 
        android:id="@+id/image" android:padding="5dip"  />
        
       <TextView android:layout_width="fill_parent" style="@style/style" 
       android:layout_height="wrap_content" 
       android:id="@+id/txt_username" 
       android:gravity="center_horizontal|center_vertical" 
        
       android:layout_centerVertical="true" 
       android:layout_alignParentRight="true" 
       android:layout_toRightOf="@+id/image"></TextView>
       
       <ImageView android:layout_width="wrap_content" 
       android:id="@+id/u_image"  android:src="@drawable/cameraicon" 
       android:layout_height="wrap_content" 
       android:layout_alignParentBottom="true" 
       
       android:layout_alignLeft="@+id/image"></ImageView>
     
       </RelativeLayout> 
         
     
      <LinearLayout
      			android:layout_marginTop="10dip" 
      			android:background="@color/bgcolor"
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="2">
			      
   <TextView  android:text="First Name"
         android:id="@+id/txtuser"
          style="@style/style"
			          android:gravity="center_horizontal|center_vertical|left"
			         android:layout_marginRight="10dip"
			         android:layout_marginLeft="20dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="0"
        ></TextView>
        
         <EditText  
          android:id="@+id/edituser"
           android:background="@drawable/field"
         android:paddingLeft="3dip"
           android:layout_marginRight="10dip"
			          android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="0"/>
        
        </LinearLayout>
        
          <LinearLayout
          		android:layout_marginTop="10dip"  
          		android:background="@color/bgcolor"
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="2">
        
        <TextView  android:text="Last Name " 
        android:id="@+id/txtlastname" style="@style/style"
			          android:gravity="center_horizontal|center_vertical|left"
			          android:layout_marginRight="10dip"
			         android:layout_marginLeft="20dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="0"
       ></TextView>
       
         <EditText 
        android:id="@+id/editlast" 
        android:background="@drawable/field"
         android:paddingLeft="3dip"
			          android:gravity="center_horizontal|center_vertical|left"
			           android:layout_marginRight="10dip"
			          android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="0"
        >
            
        </EditText>
        
       </LinearLayout>
       
        <LinearLayout
        		android:layout_marginTop="10dip"  
        		android:background="@color/bgcolor"
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="2">
			      
        <TextView  android:text="Password   " 
        android:id="@+id/txtpass" style="@style/style"
			          android:gravity="center_horizontal|center_vertical|left"
			        android:layout_marginRight="10dip"
			         android:layout_marginLeft="20dip"
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent"
			          android:layout_weight="0" 
         ></TextView>
       
        
    
           <EditText  
        android:id="@+id/editepass" android:password="true"
         android:gravity="center_horizontal|center_vertical|left"
         android:background="@drawable/field"
         android:paddingLeft="3dip"
			          android:layout_marginRight="10dip"
			          android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="0" 
        >
            
        </EditText>
    
    
      
       
        </LinearLayout>
      <View android:layout_width="wrap_content" android:layout_height="10dip"  />
      <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" 
      android:gravity="right"
      android:layout_gravity="right" android:background="@drawable/btn_click"
      >
     <TextView 
     android:layout_marginTop="10dip" 
     android:text="  Done  "
       android:textColor="@color/logincolor"
     android:layout_height="wrap_content" android:layout_margin="10dip" 
     android:autoLink="all" style="@style/savestyle" 
      android:layout_width="wrap_content" android:background="@drawable/signinbutton" 
      android:layout_below="@+id/editepass" 
      android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal" 
     android:id="@+id/txtsave"></TextView>
     </LinearLayout>
   
     

</LinearLayout>

 </ScrollView>
  
       </RelativeLayout>
       </LinearLayout> 