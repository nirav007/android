<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"  
  android:layout_width="fill_parent" android:layout_height="fill_parent" >
<RelativeLayout
  
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@color/bgcolor">
  

<TextView android:id="@+id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    
    android:gravity="center" android:padding="15dip"
        
        android:text="Profile" style="@style/header" 
        
        android:background="@drawable/bgeffect" />



   <ImageView android:gravity="center"  
   android:layout_width="wrap_content" android:id="@+id/idback" 
    android:layout_height="wrap_content" 
     />

    
    
   
   
  <ScrollView android:id="@+id/test" android:layout_below="@id/header"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="5dp" android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">
     
  <LinearLayout
  android:layout_marginRight="5dip"
  android:layout_margin="5dip"
  android:orientation="vertical"
   android:paddingTop="10dip" android:layout_width="fill_parent" 
   android:layout_height="wrap_content" android:weightSum="1">
       
       <RelativeLayout android:id="@+id/above"
       android:layout_gravity="center_horizontal"
        android:padding="5dip" android:orientation="horizontal" 
        android:layout_width="fill_parent" android:layout_height="140dip">
       
       <ImageView android:src="@drawable/profilepic_empty" 
       android:layout_marginLeft="10dip"
          android:gravity="center_horizontal|center_vertical"
        android:layout_height="100dip" android:layout_width="100dip" 
        android:id="@+id/profile_upload_img" android:padding="5dip"  />
        
       <TextView android:layout_width="fill_parent" style="@style/style" 
       android:layout_height="wrap_content" 
       android:id="@+id/txt_profileusername" 
       android:layout_marginTop="35dip"
       android:layout_marginLeft="10dip"
       android:gravity="center_horizontal|left|center_vertical"
      
       android:text="fsda"
       android:layout_toRightOf="@+id/profile_upload_img"></TextView>
     
       </RelativeLayout>
       
        <LinearLayout android:id="@+id/above"
       android:layout_gravity="center_horizontal"
        android:background="@drawable/roundrect_new"
        android:paddingRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
         android:orientation="horizontal" 
        android:layout_width="fill_parent" android:layout_height="150dip">
        
        
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1" >

   
    
     <TableRow android:paddingTop="5dip" android:id="@+id/rowemail"  >
     <ImageView android:src="@drawable/email" 
        android:layout_height="wrap_content" android:layout_width="wrap_content" />
        
        <TextView android:layout_width="fill_parent" 
             android:text="  Email" style="@style/style" 
       
       android:id="@+id/txtprofileemail" android:layout_height="wrap_content">
       </TextView>
    
        
    </TableRow>
    
     <TableRow android:paddingTop="5dip" android:id="@+id/rowpassword"   >
     <ImageView android:src="@drawable/phone" 
        android:layout_height="wrap_content" android:layout_width="wrap_content" />
        
        <TextView android:layout_width="fill_parent"  
       android:text="  Password" style="@style/style" 
       
       android:id="@+id/txtprofilephone" android:layout_height="wrap_content">
       </TextView>
           
    </TableRow>
      <TableRow android:paddingTop="5dip" android:id="@+id/rowinterest"  >
     <ImageView android:src="@drawable/location" 
        android:layout_height="wrap_content" android:layout_width="wrap_content" />
        
        <TextView android:layout_width="fill_parent"  
       android:text="  Rajkot" style="@style/style" 
       
       android:id="@+id/txtprofilelocation" android:layout_height="wrap_content">
       </TextView>
    
    </TableRow>
    </TableLayout>
        </LinearLayout>
        
 
      </LinearLayout>
 </ScrollView>
  
       </RelativeLayout>
       </LinearLayout> 