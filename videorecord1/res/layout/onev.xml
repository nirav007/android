<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:id="@+id/v" android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
     >
    
   
  
   
<VideoView android:id="@+id/surface_view"  android:layout_gravity="center"
  android:layout_above="@+id/mtool"  
      android:layout_width="fill_parent" android:layout_height="fill_parent"
      ></VideoView>
   
    
      
 <LinearLayout android:id="@+id/mtool" android:background="#00ffffff"
android:layout_height="wrap_content" android:orientation="horizontal"
android:visibility="visible" android:gravity="center"
 android:layout_width="fill_parent" android:layout_gravity="bottom"
android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
   
    <ImageView 
    android:background="@drawable/btn_click"
    android:paddingLeft="5dip" android:paddingRight="5dip" android:layout_width="wrap_content"
     android:src="@drawable/pause" android:layout_height="wrap_content" android:id="@+id/pause">
     </ImageView>
     
    <ImageView android:paddingLeft="5dip" android:paddingRight="5dip" android:layout_width="wrap_content"
    android:background="@drawable/btn_click"
     android:src="@drawable/reset" android:layout_height="wrap_content" android:id="@+id/reset">
     </ImageView>
  
  
  
    <ImageView android:paddingLeft="5dip" android:paddingRight="5dip"
    android:background="@drawable/btn_click"
    android:layout_width="wrap_content" android:src="@drawable/fullscreen" android:layout_height="wrap_content" 
    android:id="@+id/fulls"></ImageView>
   
    <TextView android:layout_width="wrap_content" android:src="@drawable/backword" 
    android:background="@drawable/btn_click"
   android:id="@+id/txtslow"
    android:layout_height="wrap_content" android:text="Slow Motion" android:textColor="@android:color/white"
     android:gravity="center_vertical"
    android:paddingTop="8dip" android:paddingLeft="5dip" android:paddingBottom="7dip"
     />
</LinearLayout>


</FrameLayout>
